<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Editar {{name}}</h1>

            <hr>

            <form action="/drones/edit?drone_id={{id}}" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Velocidad Máxima</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                <button type="submit" class="btn btn-dark">Guardar edición</button>
            </form>


            <hr>


        </div>
    </div>


</div>